    <TITLE>Poes User's Symposium</TITLE>
    <META NAME="GENERATOR" CONTENT="Internet Assistant for Word 1.0Z">
    <META NAME="AUTHOR" CONTENT="pc-8">
    <META NAME="OPERATOR" CONTENT="Jeff Kingwell">
