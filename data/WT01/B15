var _msgBack="Returns to the previous document in the display frame";var _msgForward="Moves forward to the next document in the display frame";var _msgHome="Shows the location entered in Search Text or the selected search Engine's homepage ";var _msgSearch="Starts your search using the selected engine";var _msgCompuLink="Go to Compulink's hompage";var _msgSearchText="Enter the words you want to search for, a location to visit, or a command"var _msgEngine="Choose the search engine you want to use for your search";var _msgReturn="Choose the number of documents that you wish returned (not supported by all engines)"; var _msgDisplay="Choose the amount of information you want returned about each document (not supported by all engines)"; var _msgMatch="Choose the logic that the engine should use when searching (not supported by all engines)"; var _stwversion=3.5; var _searching=2; var _stitle="djfigjenfghcb";var _base="http://www.compulinks.com/search/";var _maxValues=8; var _form=0; var _searchfor=1; var _engine=2; var _count=3; var _display=4; var _match=5; var _homeURL=6; var _version=7; function doNothing() {}function setStatus(txt) {window.status=txt;}function makeArray(n) {this.length = n; return this;} function selectObj (value, name) {this.name=name;this.value=value;} function engineObj(name, submitval, searchfor, count, display, match, hidden) {this.name = name;this.submitval= submitval;this.searchfor = searchfor;this.count = count; this.display = display;this.match = match;this.hidden = hidden;} function valuesObj(form,searchfor,engine,count,display,match,homeURL,version) {this.form = form; this.searchfor = searchfor; this.engine = engine;this.count = count;this.display = display; this.match = match;this.homeURL = homeURL;this.version = version;} function goBack() {_searching=-1; frames[1].history.back();}function goForward() {_searching=1; frames[1].history.forward();}function doSubmit() {pValues[_searchfor]=frames[0].document.forms[0].searchfor.value; p=pValues[_searchfor]; if (p=="") alert("\rYou have not entered anything in the Search Text field."); else if (p.toUpperCase()=="HELP") frames[1].location.href=_base+"welcome.html";else if (p.toUpperCase()=="HOME") frames[1].location.href=pValues[_homeURL]; else if (p.toUpperCase()=="COMMANDS") frames[1].location.href=_base+"commands.html";else if (p.indexOf("://") > 0) frames[1].location.href=pValues[_searchfor]; else doSearch();}function doSearch() {var p=pValues[_searchfor]; if (p=="") alert("You have not entered a search string. To get help, type \"help\" in the Search Text are and press <Enter>.");else {_searching=0; frames[1].location.href=_base+"search.html";}}function prepareSearch() {var n=0; var e=parseInt(pValues[_engine]); var r="<html><head><title>"+ _stitle +"</title></head><body><body bgcolor=#ffffff><center><h3><b>";if (_searching==0) {r+="Contacting "+ engines[e].name.name +" with your search request</h3></b>";}else r+="Previous search request</h3></b>";r+="<form name=\"s\" action=\"http://"+ engines[e].submitval.name +"\" method="+ engines[e].submitval.value +">";r+="<input type=hidden name=\""+ engines[e].searchfor.name +"\" value=\""+ pValues[_searchfor] +"\">";if (engines[e].count.name!="") r+="<input type=hidden name=\""+ engines[e].count.name +"\" value=\""+ matchCount(engines[e].count.value) +"\">";if (engines[e].display.name!="") r+="<input type=hidden name=\""+ engines[e].display.name +"\" value=\""+ getSubString(engines[e].display.value, pValues[_display]+1) +"\">";if (engines[e].match.name!="") r+="<input type=hidden name=\""+ engines[e].match.name +"\" value=\""+ matchMatch(engines[e].match.value) +"\">";while (engines[e].hidden[n]!=null) {r+="<input type=hidden name=\""+ engines[e].hidden[n].name +"\" value=\""+ engines[e].hidden[n].value +"\">"; n++;}r+="<scr"+"ipt language=\"JavaScript\">";r+="if (parent._searching==0) document.s.submit(); else if (parent._searching!=2) history.go(parent._searching); parent._searching=2;</sc"+"ript>";return r;} function matchMatch(v) {var p=pValues[_match]+1; var r=getSubString(v,p); if (r.length==0) {if (p==1) p++; else  p--;r=getSubString(v,p) }return r;} function matchCount(v){ var p=parseInt(counts[pValues[_count]]); var n=1; var m=1; var d=99; var pd=100; var r="";while (true){ m=parseInt(getSubString(v,n)); d = Math.abs(p-m); if (d < pd) {pd=d;r=getSubString(v,n);} else break; n++;}return r;} function getSubString(s, i) {stStart=0; for (var n=1; n<i; n++) {stStart=(s.indexOf(",",stStart)+1);} stEnd=(s.indexOf(",",stStart)); if (parseInt(stEnd)==0) return"";if (parseInt(stEnd)<0) stEnd=s.length; return s.substring(stStart,stEnd); }function setHomeURL(n) {pValues[_homeURL]=n.homeURL.value; saveValues();frames[1].location.href=pValues[_homeURL];} function setFrames(f) {pValues[_form]=f; location.href=_base;} function saveValues() {exp=new Date();exp.setMonth(exp.getMonth() + 2); var c=""; pValues[_version]=_stwversion; for (var n=0; n < (_maxValues-1); n++) {c+=pValues[n] + ",";}c+=pValues[_maxValues-1]; document.cookie = "Search the World="+ c +"; expires="+ exp;} function setValues() {frames[0].document.forms[0].searchfor.value=pValues[_searchfor]; frames[0].document.forms[0].engine.selectedIndex=parseInt(pValues[_engine]); frames[0].document.forms[0].count.selectedIndex=parseInt(pValues[_count]); frames[0].document.forms[0].display.selectedIndex=parseInt(pValues[_display]); frames[0].document.forms[0].match.selectedIndex=parseInt(pValues[_match]); }function  initValues() {var c=document.cookie; if (c=="") c="Search the World=1,,0,1,1,1,"+_base+"welcome.html,"+_stwversion; if (c.substring(0,17)=="CompuLink Search=") c+=","+(_stwversion-1); if (parseFloat(getSubString(c,_version-1)) < 3.3) c+=",0,0";var s=17; var e=0; for (var n=0; n < _maxValues; n++) {e=c.indexOf(",",s); if (e < 0) e=c.length; pValues[n]=c.substring(s,e); s=e+1;}} function loadTools() {return "toolform"+ pValues[_form] +".html";}function loadDisplay() {if (parseFloat(pValues[_version])!=_stwversion) return "update.html";else return pValues[_homeURL];} function startUp() {initValues(); var r="";var c=parseInt(pValues[_form]); if (c==1) r+="<frameset rows=99,*><frame name=frTools src="+loadTools() +" scrolling=no marginwidth=0 marginheight=0 noresize>";else if (c==2) r+="<frameset rows=57,*><frame name=frTools src=" + loadTools() +" scrolling=auto marginwidth=0 marginheight=0 noresize>";else r+="<frameset rows=57,*><frame name=frTools src=" + loadTools() +" scrolling=no marginwidth=0 marginheight=0 noresize>";r+="<frame src="+ loadDisplay() +" name=frDisplay></frameset>";document.write(r);} engines = new makeArray(11); engines[0] = new engineObj(new selectObj("www.altavista.digital.com", "Alta Vista"),new selectObj("GET","www.altavista.digital.com/cgi-bin/query"),new selectObj("","q"),new selectObj("",""),new selectObj("c,.,d", "fmt"),new selectObj("", ""),new makeArray(1)); engines[0].hidden[0] = new selectObj("q", "pg");engines[0].hidden[1] = new selectObj("web", "what");engines[1] = new engineObj(new selectObj("www.excite.com", "Excite"),new selectObj("POST","www.excite.com/search.gw"),new selectObj("","search"),new selectObj("",""),new selectObj("",""),new selectObj("Concept,Keyword,","searchType"),new makeArray(3)); engines[1].hidden[0] = new selectObj("default", "catagory");engines[1].hidden[1] = new selectObj("relevance", "mode");engines[1].hidden[2] = new selectObj("1", "showqbe");engines[1].hidden[3] = new selectObj("html2,lb", _display); engines[2] = new engineObj(new selectObj("galaxy.tradewave.com", "Galaxy"),new selectObj("POST","galaxy.tradewave.com/cgi-bin/wais-text-multi"),new selectObj("","keywords"),new selectObj("",""),new selectObj("1,2,3","terseness"),new selectObj(",allterms,anyterms","bool"),new makeArray(3)); engines[2].hidden[0] = new selectObj("webtext", "area");engines[2].hidden[1] = new selectObj("", "subject");engines[2].hidden[2] = new selectObj("relevance", "mode");engines[2].hidden[3] = new selectObj("checked", "websearch");engi