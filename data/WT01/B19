   <TITLE>Respondent's Brief - June 4, 1996</TITLE>
   <META NAME="AUTHOR" CONTENT="">
   <META NAME="SUMMARY" CONTENT="">
   <META NAME="KEYWORDS" CONTENT="">
   <META NAME="GENERATOR" CONTENT="Mozilla/3.0b5aGold (Win95; I) [Netscape]">
