function scrollit_r2l(seed)

{

        var m1  = "Welcome to SlimAmerica Inc.                                                               ";

        var m2  = "If you Order NOW ........                                                                 ";

        var h1  = "As Super Deal on a 60 day supply Just $79.95 + Shipping $5.95                    ";

        var msg=m1+m2+h1;

        var out = " ";

        var c   = 0;



        if (seed > 100) {

                seed--;

                var cmd="scrollit_r2l(" + seed + ")";

                timerTwo=window.setTimeout(cmd,10);

        }

        else if (seed <= 100 && seed > 0) {

                for (c=0 ; c < seed ; c++) {

                        out+=" ";

                }

                out+=msg;

                seed--;

                var cmd="scrollit_r2l(" + seed + ")";

                window.status=out;

                timerTwo=window.setTimeout(cmd,10);

        }

        else if (seed <= 0) {

                if (-seed < msg.length) {

                        out+=msg.substring(-seed,msg.length);

                        seed--;

                        var cmd="scrollit_r2l(" + seed + ")";

                        window.status=out;

                        timerTwo=window.setTimeout(cmd,10);

                }

                else {

                        window.status=" ";

                        timerTwo=window.setTimeout("scrollit_r2l(100)",75);

                }

        }

}

