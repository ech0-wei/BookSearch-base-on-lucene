<!--<body bgcolor="#ffffff" text="#000000" link="#003399" vlink="#FF0000" background="pressgrey.jpg">--><!--<h1 align="center"><font color="#0000FF" size="5">NAMI Press Room</font></h1>-->
<p align="center"><img src="namipre2.gif" alt="NAMI Press Room"> </p>

<hr>

<table border="0" cellpadding="5" cellspacing="5" width="100%">
    <tr>
        <td valign="top"><table border="1" cellpadding="0">
            <tr>
                <td><a href="/pressroom"><img src="preshome.gif"
                alt="NAMI Press Room" border="0" width="150"
                height="45"></a> </td>
            </tr>
            <tr>
                <td><a href="news.html"><img src="news.gif"
                alt="News Releases and Statements" border="0"
                width="150" height="45"></a> </td>
            </tr>
            <tr>
                <td><a href="recent.html"><img src="recent2.gif"
                alt="Recent Media Coverage" border="0"
                width="150" height="45"></a> </td>
            </tr>
            <tr>
                <td><a href="testimony.html"><img src="test.gif"
                alt="NAMI Testimony and Speeches" border="0"
                width="150" height="45"></a> </td>
            </tr>
            <tr>
                <td><a href="fact.html"><img src="fact.gif"
                alt="Fact Sheets" border="0" width="150"
                height="45"></a> </td>
            </tr>
            <tr>
                <td><a href="leadership.html"><img src="lead.gif"
                alt="NAMI Leadership Bios" border="0" width="150"
                height="45"></a> </td>
            </tr>
            <tr>
                <td><a href="links.html"><img src="link.gif"
                alt="Links to Other Sites" border="0" width="150"
                height="45"></a> </td>
            </tr>
